<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDSACW" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A788D3</item>
        <item name="colorPrimaryVariant">#11273B</item>
        <item name="colorOnPrimary">#A788D3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A788D3</item>
        <item name="colorSecondaryVariant">#11273B</item>
        <item name="colorOnSecondary">#A788D3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Spinner.style" parent="@android:style/Widget.Holo.DropDownItem.Spinner">

        <item name="android:gravity">center</item>
    </style>
    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layout</item>
    </style>

</resources>